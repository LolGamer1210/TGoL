<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ingmonika.tgol.controladores.ControladorMenu">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <top>
        <Label alignment="CENTER" prefHeight="150.0" prefWidth="455.0" style="-fx-font-size: 36;" styleClass="title" text="¡LOL OF LEGENDS!" textAlignment="JUSTIFY" textFill="#6a1b9a" textOverrun="CLIP" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="ALWAYS">
                <TextField fx:id="nombreJugador1" promptText="Nombre Jugador 1" styleClass="proyectoTexto" stylesheets="@styles.css" />
                <TextField fx:id="nombreJugador2" promptText="Nombre Jugador 2" styleClass="proyectoTexto" />
                <CheckBox fx:id="tipoJugador2" text="CPU" />
                <Label text="Tamaño del Grid o Tablero:">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <ChoiceBox fx:id="gridSize" prefWidth="180.0" />
            </VBox>

            <VBox alignment="CENTER_RIGHT" spacing="40.0" VBox.vgrow="ALWAYS">
                <Button fx:id="botonJugar" styleClass="custom-button" text="Jugar" />
                <Button fx:id="botonOpciones" styleClass="custom-button" text="Opciones" />
                <Button fx:id="botonAcercaDe" styleClass="custom-button" text="Acerca de" />
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="BOTTOM_RIGHT">
            <Text fx:id="version" text="Proyecto final de Programacion II" textAlignment="RIGHT" />
        </VBox>
    </bottom>
</BorderPane>
